  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl lg:text-5xl font-bold mb-6 text-center">
          Developer <span class="text-gradient animated-gradient">Documentation</span>
        </h1>
        <p class="text-lg text-muted mb-8 text-center max-w-2xl mx-auto">
          Build powerful plugins with the Huitzo SDK. Access comprehensive API
          references, tutorials, and real-world examples.
        </p>

        <!-- Terminal Preview -->
        <div class="max-w-2xl mx-auto mb-8">
          <TerminalPrompt lines={terminalLines} animate={false} class="glow" />
        </div>

        <!-- Quick Install -->
        <div class="max-w-2xl mx-auto">
          <Command command="pip install huitzo-sdk" />
        </div>
      </div>
    </div>
  </section>

