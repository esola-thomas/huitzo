---
import Layout from '~/layouts/PageLayout.astro';
import TerminalPrompt from '~/components/TerminalPrompt.astro';
import Command from '~/components/Command.astro';

const metadata = {
  title: 'Developer Documentation',
  description: 'Build powerful plugins with the Huitzo SDK. Access comprehensive API references, tutorials, and examples.',
};

const terminalLines = [
  '$ pip install huitzo-sdk',
  's> Successfully installed huitzo-sdk',
  'i> Ready to build intelligent plugins',
];
---

