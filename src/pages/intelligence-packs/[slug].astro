---
import Layout from '~/layouts/PageLayout.astro';
import Command from '~/components/Command.astro';
import CTAButton from '~/components/CTAButton.astro';
import { loadAllIntelligencePacks, type IntelligencePack } from '~/utils/intelligence-packs';

// Generate static paths for all intelligence packs
export async function getStaticPaths() {
  const packs = await loadAllIntelligencePacks();

  return packs.map(pack => ({
    params: { slug: pack.slug },
    props: { pack },
  }));
}

interface Props {
  pack: IntelligencePack;
}

const { pack } = Astro.props;

if (!pack) {
  return Astro.redirect('/404');
}

function formatPrice(price: string) {
  if (price.startsWith('$')) return price;
  return `$${price}`;
}

const metadata = {
  title: `${pack.name} Intelligence Pack | Huitzo`,
  description: pack.description
};

// Get status and category info
const isComingSoon = pack.status === 'coming-soon';
const isBeta = pack.status === 'beta';
const isIdeaPhase = pack.status === 'idea-phase';
---

<Layout metadata={metadata}>

  <!-- Status Banner for Coming Soon / Beta / Idea Phase -->
  {(isComingSoon || isBeta || isIdeaPhase) && (
    <div class={`py-3 text-center ${
      isBeta ? 'bg-status-warning/10 border-b border-status-warning/30' :
      isIdeaPhase ? 'bg-purple-500/10 border-b border-purple-500/30' :
      'bg-huitzo-accent/10 border-b border-huitzo-accent/30'
    }`}>
      <div class="container mx-auto px-4">
        <p class={`text-sm font-medium ${
          isBeta ? 'text-status-warning' :
          isIdeaPhase ? 'text-purple-400' :
          'text-huitzo-accent'
        }`}>
          {isBeta && (
            <>
              üß™ <strong>Beta Intelligence Pack:</strong> This intelligence pack is currently in beta testing. Features may change before official release.
            </>
          )}
          {isComingSoon && (
            <>
              üöÄ <strong>Coming Soon:</strong> This intelligence pack is currently in development. Check out the planned features and documentation below.
            </>
          )}
          {isIdeaPhase && (
            <>
              üí° <strong>Idea Phase:</strong> This intelligence pack is in the concept stage. We're exploring the idea and would love your feedback to shape its development.
            </>
          )}
        </p>
      </div>
    </div>
  )}

  <!-- Structured Data for SoftwareApplication -->
  <script type="application/ld+json" is:inline>
    {{
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": pack.name,
      "description": pack.description,
      "applicationCategory": "BusinessApplication",
      "operatingSystem": "Any",
      "author": {
        "@type": "Person",
        "name": pack.author
      },
      "offers": (pack.pricing && pack.pricing.free && pack.pricing.free.available) ? {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      } : undefined
    }}
  </script>

    <!-- Header Section -->  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Back Link -->
        <div class="mb-8">
          <a href={`${import.meta.env.BASE_URL}intelligence-packs`} class="inline-flex items-center text-text-secondary hover:text-huitzo-accent transition-colors">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="mr-2">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Intelligence Packs
          </a>
        </div>

        <!-- Intelligence Pack Header -->
        <div class="flex items-start justify-between mb-8">
          <div class="flex items-start gap-4">
            <div class="text-5xl">{pack.icon}</div>
            <div>
              <h1 class="text-4xl lg:text-5xl font-bold text-text-primary mb-2">
                {pack.name} Intelligence Pack
              </h1>
              <div class="flex items-center gap-4 text-sm text-text-muted mb-4">
                <span>v{pack.version}</span>
                <span>‚Ä¢</span>
                <span>By {pack.author}</span>
                {pack.pricing?.free?.available && (
                  <>
                    <span>‚Ä¢</span>
                    <span class="text-status-success font-medium">Free Tier Available</span>
                  </>
                )}
              </div>
              <p class="text-lg text-text-secondary leading-relaxed">
                {pack.tagline}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Overview Section -->
  <section class="py-12 bg-huitzo-secondary/30">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-text-primary mb-6">
          {isIdeaPhase ? 'The Concept' : isComingSoon ? 'What We\'re Building' : 'Overview'}
        </h2>
        <div class="card">
          <p class="text-text-secondary leading-relaxed text-lg">
            {pack.description}
          </p>

          {isIdeaPhase && (
            <div class="mt-6 pt-6 border-t border-huitzo-border">
              <p class="text-sm text-text-muted">
                üí≠ <strong>This is just an idea:</strong> We're exploring whether this intelligence pack would be valuable.
                The features below represent what we're thinking about building. Your feedback can help shape or even change this direction entirely.
              </p>
            </div>
          )}

          {isComingSoon && !isIdeaPhase && (
            <div class="mt-6 pt-6 border-t border-huitzo-border">
              <p class="text-sm text-text-muted">
                üí° <strong>Why this matters:</strong> We're developing this intelligence pack to address a real need in the market.
                All features documented below are planned for the initial release.
              </p>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-text-primary mb-8">
          {isIdeaPhase ? 'Potential Features' : isComingSoon ? 'Planned Features' : isBeta ? 'Beta Features' : 'Key Features'}
        </h2>
        {isIdeaPhase && (
          <p class="text-text-muted mb-6">
            These are features we're considering. They're not set in stone - your feedback could change everything:
          </p>
        )}
        {isComingSoon && !isIdeaPhase && (
          <p class="text-text-muted mb-6">
            These are the features we're actively building for the initial release:
          </p>
        )}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {Array.isArray(pack.features) && pack.features.map((feature: string) => (
            <div class="flex items-start gap-3 p-4 bg-huitzo-secondary/50 rounded-lg border border-huitzo-border">
              <span class="text-huitzo-accent mt-1">{isIdeaPhase ? 'üí≠' : isComingSoon ? 'üìã' : '‚úì'}</span>
              <span class="text-text-secondary">{feature}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  {pack.pricing && (
    <section class="py-20 bg-huitzo-secondary/30">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-text-primary mb-8 text-center">Pricing</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <!-- Free Tier -->
              {pack.pricing.free && pack.pricing.free.available && (
                <div class="card">
                  <div class="text-center mb-6">
                    <h3 class="text-xl font-semibold text-text-primary mb-2">Free Tier</h3>
                    <div class="text-3xl font-bold text-huitzo-accent mb-2">$0</div>
                    <div class="text-sm text-text-muted">{pack.pricing.free.limits}</div>
                  </div>
                  <ul class="space-y-3 mb-6">
                    {pack.pricing && pack.pricing.free && Array.isArray(pack.pricing.free.features) && pack.pricing.free.features.map((feature: string) => (
                      <li class="flex items-start gap-2">
                        <span class="text-status-success mt-1">‚úì</span>
                        <span class="text-text-secondary text-sm">{feature}</span>
                      </li>
                    ))}
                  </ul>
                  <div class="text-center">
                    <CTAButton href="https://cli.huitzo.com" target="_blank" rel="noopener" variant="secondary">
                      Get Started Free
                    </CTAButton>
                  </div>
                </div>
              )}

              <!-- Pro Tier -->
              {pack.pricing.pro && (
                <div class="card border-huitzo-accent">
                  <div class="text-center mb-6">
                    <h3 class="text-xl font-semibold text-text-primary mb-2">Pro</h3>
                    <div class="text-3xl font-bold text-huitzo-accent mb-2">{pack.pricing.pro.price ? formatPrice(pack.pricing.pro.price) : 'Coming Soon'}</div>
                    <div class="text-sm text-text-muted">{pack.pricing.pro.price ? 'per month' : ''}</div>
                  </div>
                  <ul class="space-y-3 mb-6">
                    {pack.pricing && pack.pricing.pro && Array.isArray(pack.pricing.pro.features) && pack.pricing.pro.features.map((feature: string) => (
                      <li class="flex items-start gap-2">
                        <span class="text-status-success mt-1">‚úì</span>
                        <span class="text-text-secondary text-sm">{feature}</span>
                      </li>
                    ))}
                  </ul>
                  <div class="text-center">
                    <CTAButton href="https://cli.huitzo.com" target="_blank" rel="noopener">
                      Upgrade to Pro
                    </CTAButton>
                  </div>
                </div>
              )}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Installation Section -->
  {pack.installation && (
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-text-primary mb-8">
            {isIdeaPhase ? 'Potential Installation (Concept)' : isComingSoon ? 'How to Install (When Available)' : 'Installation'}
          </h2>

          {isIdeaPhase && (
            <div class="mb-6 p-4 bg-purple-500/10 border border-purple-500/30 rounded-lg">
              <p class="text-sm text-text-secondary">
                üí° This is a conceptual installation command showing how we envision this intelligence pack might work if developed.
              </p>
            </div>
          )}

          {isComingSoon && !isIdeaPhase && (
            <div class="mb-6 p-4 bg-huitzo-accent/10 border border-huitzo-accent/30 rounded-lg">
              <p class="text-sm text-text-secondary">
                ‚ÑπÔ∏è This intelligence pack is not yet available. The installation command below shows how it will work once released.
              </p>
            </div>
          )}

          <div class="mb-8">
            <Command command={pack.installation.command} />
          </div>

      {pack.installation.requirements && pack.installation.requirements.length > 0 && (
          <div class="card">
            <h3 class="text-lg font-semibold text-text-primary mb-4">Requirements</h3>
            <ul class="space-y-2">
              {pack.installation && Array.isArray(pack.installation.requirements) && pack.installation.requirements.map((req: string) => (
                <li class="flex items-start gap-2">
                  <span class="text-huitzo-accent mt-1">‚Ä¢</span>
                  <span class="text-text-secondary text-sm">{req}</span>
                </li>
              ))}
            </ul>
          </div>
        )}
        </div>
      </div>
    </section>
  )}

  <!-- Quick Start Section -->
  {pack.quickstart && Array.isArray(pack.quickstart) && pack.quickstart.length > 0 && (
    <section class="py-20 bg-huitzo-secondary/30">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-text-primary mb-8">
            {isIdeaPhase ? 'Envisioned Usage' : isComingSoon ? 'Planned Quick Start Guide' : 'Quick Start'}
          </h2>
          {isIdeaPhase && (
            <p class="text-text-muted mb-6">
              Here's how we imagine using this intelligence pack might work:
            </p>
          )}
          {isComingSoon && !isIdeaPhase && (
            <p class="text-text-muted mb-6">
              Here's how you'll use this intelligence pack once it's available:
            </p>
          )}
          <div class="space-y-6">
            {Array.isArray(pack.quickstart) && pack.quickstart.map((step: { step: number; title: string; command: string; description: string }) => (
              <div class="card">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-8 h-8 bg-huitzo-accent text-huitzo-dark rounded-full flex items-center justify-center font-mono font-bold text-sm">
                    {step.step}
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-text-primary mb-3">{step.title}</h3>
                    <Command command={step.command} description={step.description} />
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Available Commands Section -->
  {pack.commands && Array.isArray(pack.commands) && pack.commands.length > 0 && (
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-text-primary mb-8">Available Commands</h2>
          <div class="space-y-4">
            {Array.isArray(pack.commands) && pack.commands.map((cmd: { name: string; description: string }) => (
              <div class="card">
                <div class="flex flex-col md:flex-row md:items-center gap-4">
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-huitzo-accent font-mono mb-2">{cmd.name}</h3>
                    <p class="text-text-secondary">{cmd.description}</p>
                  </div>
                  <div class="flex-shrink-0">
                    <button class="copy-btn" data-clipboard-text={cmd.name}>
                      Copy
                    </button>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Links Section -->
  {pack.links && (
    <section class="py-20 bg-huitzo-secondary/30">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-text-primary mb-8 text-center">Resources</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {pack.links.documentation && (
              <a href={pack.links.documentation} class="card text-center hover:border-huitzo-accent transition-colors">
                <div class="text-3xl mb-4">üìö</div>
                <h3 class="text-lg font-semibold text-text-primary mb-2">Documentation</h3>
                <p class="text-text-secondary text-sm">Complete guide and API reference</p>
              </a>
            )}

            {pack.sourceCode && pack.links.repository && (
              <a href={pack.links.repository} target="_blank" rel="noopener" class="card text-center hover:border-huitzo-accent transition-colors">
                <div class="text-3xl mb-4">üíª</div>
                <h3 class="text-lg font-semibold text-text-primary mb-2">Source Code</h3>
                <p class="text-text-secondary text-sm">Source code and development</p>
              </a>
            )}

            {pack.links.support && (
              <a href={pack.links.support} class="card text-center hover:border-huitzo-accent transition-colors">
                <div class="text-3xl mb-4">üí¨</div>
                <h3 class="text-lg font-semibold text-text-primary mb-2">Support</h3>
                <p class="text-text-secondary text-sm">Get help and report issues</p>
              </a>
            )}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Final CTA -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        {isIdeaPhase ? (
          <>
            <h2 class="text-3xl font-bold text-text-primary mb-6">
              Help Shape This Intelligence Pack
            </h2>
            <p class="text-lg text-text-secondary mb-8">
              This intelligence pack is still just an idea. Your feedback could make it real - or help us pivot to something even better.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <CTAButton href={pack.links?.support || 'https://github.com/esola-thomas/huitzo/issues'} target="_blank" rel="noopener">
                Share Your Thoughts ‚Üí
              </CTAButton>
              <CTAButton href={`${import.meta.env.BASE_URL}intelligence-packs`} variant="secondary">
                Explore Other Intelligence Packs
              </CTAButton>
            </div>
          </>
        ) : isComingSoon ? (
          <>
            <h2 class="text-3xl font-bold text-text-primary mb-6">
              Want to Know When This Launches?
            </h2>
            <p class="text-lg text-text-secondary mb-8">
              This intelligence pack is actively in development. Check our roadmap to see the timeline and stay updated on progress.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <CTAButton href={`${import.meta.env.BASE_URL}roadmap`}>
                View Development Roadmap ‚Üí
              </CTAButton>
              <CTAButton href={`${import.meta.env.BASE_URL}intelligence-packs`} variant="secondary">
                Explore Other Intelligence Packs
              </CTAButton>
            </div>
          </>
        ) : isBeta ? (
          <>
            <h2 class="text-3xl font-bold text-text-primary mb-6">
              Ready to Try the Beta?
            </h2>
            <p class="text-lg text-text-secondary mb-8">
              Help us test and improve this intelligence pack. Your feedback will shape the final release.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <CTAButton href="https://cli.huitzo.com" target="_blank" rel="noopener">
                Get Started with Beta ‚Üí
              </CTAButton>
              <CTAButton href={pack.links?.support || 'https://github.com/esola-thomas/huitzo/issues'} target="_blank" rel="noopener" variant="secondary">
                Report Issues or Feedback
              </CTAButton>
            </div>
          </>
        ) : (
          <>
            <h2 class="text-3xl font-bold text-text-primary mb-6">
              Your Intelligence Advantage Starts Now
            </h2>
            <p class="text-lg text-text-secondary mb-8">
              Activate this intelligence pack and let simple commands deliver insights your competition will miss.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <CTAButton href="https://cli.huitzo.com" target="_blank" rel="noopener">
                Command Your Intelligence (Launching Soon) ‚Üí
              </CTAButton>
              <CTAButton href={`${import.meta.env.BASE_URL}intelligence-packs`} variant="secondary">
                Explore Other Intelligence Packs
              </CTAButton>
            </div>
          </>
        )}
      </div>
    </div>
  </section>
</Layout>