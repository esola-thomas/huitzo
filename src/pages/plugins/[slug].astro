---
import Layout from '~/layouts/PageLayout.astro';
import Command from '~/components/Command.astro';
import CTAButton from '~/components/CTAButton.astro';
import { loadAllPlugins, type Plugin } from '~/utils/plugins';

// Generate static paths for all plugins
export async function getStaticPaths() {
  const plugins = await loadAllPlugins();
  
  return plugins.map(plugin => ({
    params: { slug: plugin.slug },
    props: { plugin },
  }));
}

interface Props {
  plugin: Plugin;
}

const { plugin } = Astro.props;

if (!plugin) {
  return Astro.redirect('/404');
}

function formatPrice(price: string) {
  if (price.startsWith('$')) return price;
  return `$${price}`;
}

const metadata = {
  title: `${plugin.name} Plugin | Huitzo`,
  description: plugin.description
};
---

<Layout metadata={metadata}>

  <!-- Structured Data for SoftwareApplication -->
  <script type="application/ld+json" is:inline>
    {{
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": plugin.name,
      "description": plugin.description,
      "applicationCategory": "BusinessApplication",
      "operatingSystem": "Any",
      "author": {
        "@type": "Person",
        "name": plugin.author
      },
      "offers": (plugin.pricing && plugin.pricing.free && plugin.pricing.free.available) ? {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      } : undefined
    }}
  </script>

    <!-- Header Section -->  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Back Link -->
        <div class="mb-8">
          <a href={`${import.meta.env.BASE_URL}plugins`} class="inline-flex items-center text-text-secondary hover:text-huitzo-accent transition-colors">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="mr-2">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Plugins
          </a>
        </div>

        <!-- Plugin Header -->
        <div class="flex items-start justify-between mb-8">
          <div class="flex items-start gap-4">
            <div class="text-5xl">{plugin.icon}</div>
            <div>
              <h1 class="text-4xl lg:text-5xl font-bold text-text-primary mb-2">
                {plugin.name} Plugin
              </h1>
              <div class="flex items-center gap-4 text-sm text-text-muted mb-4">
                <span>v{plugin.version}</span>
                <span>•</span>
                <span>By {plugin.author}</span>
                {plugin.pricing?.free?.available && (
                  <>
                    <span>•</span>
                    <span class="text-status-success font-medium">Free Tier Available</span>
                  </>
                )}
              </div>
              <p class="text-lg text-text-secondary leading-relaxed">
                {plugin.tagline}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Overview Section -->
  <section class="py-12 bg-huitzo-secondary/30">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-text-primary mb-6">Overview</h2>
        <div class="card">
          <p class="text-text-secondary leading-relaxed text-lg">
            {plugin.description}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-text-primary mb-8">Key Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {Array.isArray(plugin.features) && plugin.features.map((feature: string) => (
            <div class="flex items-start gap-3 p-4 bg-huitzo-secondary/50 rounded-lg border border-huitzo-border">
              <span class="text-huitzo-accent mt-1">•</span>
              <span class="text-text-secondary">{feature}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  {plugin.pricing && (
    <section class="py-20 bg-huitzo-secondary/30">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-text-primary mb-8 text-center">Pricing</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <!-- Free Tier -->
              {plugin.pricing.free && plugin.pricing.free.available && (
                <div class="card">
                  <div class="text-center mb-6">
                    <h3 class="text-xl font-semibold text-text-primary mb-2">Free Tier</h3>
                    <div class="text-3xl font-bold text-huitzo-accent mb-2">$0</div>
                    <div class="text-sm text-text-muted">{plugin.pricing.free.limits}</div>
                  </div>
                  <ul class="space-y-3 mb-6">
                    {plugin.pricing && plugin.pricing.free && Array.isArray(plugin.pricing.free.features) && plugin.pricing.free.features.map((feature: string) => (
                      <li class="flex items-start gap-2">
                        <span class="text-status-success mt-1">✓</span>
                        <span class="text-text-secondary text-sm">{feature}</span>
                      </li>
                    ))}
                  </ul>
                  <div class="text-center">
                    <CTAButton href="https://cli.huitzo.com" target="_blank" rel="noopener" variant="secondary">
                      Get Started Free
                    </CTAButton>
                  </div>
                </div>
              )}

              <!-- Pro Tier -->
              {plugin.pricing.pro && (
                <div class="card border-huitzo-accent">
                  <div class="text-center mb-6">
                    <h3 class="text-xl font-semibold text-text-primary mb-2">Pro</h3>
                    <div class="text-3xl font-bold text-huitzo-accent mb-2">{plugin.pricing.pro.price ? formatPrice(plugin.pricing.pro.price) : 'Coming Soon'}</div>
                    <div class="text-sm text-text-muted">{plugin.pricing.pro.price ? 'per month' : ''}</div>
                  </div>
                  <ul class="space-y-3 mb-6">
                    {plugin.pricing && plugin.pricing.pro && Array.isArray(plugin.pricing.pro.features) && plugin.pricing.pro.features.map((feature: string) => (
                      <li class="flex items-start gap-2">
                        <span class="text-status-success mt-1">✓</span>
                        <span class="text-text-secondary text-sm">{feature}</span>
                      </li>
                    ))}
                  </ul>
                  <div class="text-center">
                    <CTAButton href="https://cli.huitzo.com" target="_blank" rel="noopener">
                      Upgrade to Pro
                    </CTAButton>
                  </div>
                </div>
              )}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Installation Section -->
  {plugin.installation && (
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-text-primary mb-8">Installation</h2>

          <div class="mb-8">
            <Command command={plugin.installation.command} />
          </div>

      {plugin.installation.requirements && plugin.installation.requirements.length > 0 && (
          <div class="card">
            <h3 class="text-lg font-semibold text-text-primary mb-4">Requirements</h3>
            <ul class="space-y-2">
              {plugin.installation && Array.isArray(plugin.installation.requirements) && plugin.installation.requirements.map((req: string) => (
                <li class="flex items-start gap-2">
                  <span class="text-huitzo-accent mt-1">•</span>
                  <span class="text-text-secondary text-sm">{req}</span>
                </li>
              ))}
            </ul>
          </div>
        )}
        </div>
      </div>
    </section>
  )}

  <!-- Quick Start Section -->
  {plugin.quickstart && Array.isArray(plugin.quickstart) && plugin.quickstart.length > 0 && (
    <section class="py-20 bg-huitzo-secondary/30">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-text-primary mb-8">Quick Start</h2>
          <div class="space-y-6">
            {Array.isArray(plugin.quickstart) && plugin.quickstart.map((step: { step: number; title: string; command: string; description: string }) => (
              <div class="card">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-8 h-8 bg-huitzo-accent text-huitzo-dark rounded-full flex items-center justify-center font-mono font-bold text-sm">
                    {step.step}
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-text-primary mb-3">{step.title}</h3>
                    <Command command={step.command} description={step.description} />
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Available Commands Section -->
  {plugin.commands && Array.isArray(plugin.commands) && plugin.commands.length > 0 && (
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-text-primary mb-8">Available Commands</h2>
          <div class="space-y-4">
            {Array.isArray(plugin.commands) && plugin.commands.map((cmd: { name: string; description: string }) => (
              <div class="card">
                <div class="flex flex-col md:flex-row md:items-center gap-4">
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-huitzo-accent font-mono mb-2">{cmd.name}</h3>
                    <p class="text-text-secondary">{cmd.description}</p>
                  </div>
                  <div class="flex-shrink-0">
                    <button class="copy-btn" data-clipboard-text={cmd.name}>
                      Copy
                    </button>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Links Section -->
  {plugin.links && (
    <section class="py-20 bg-huitzo-secondary/30">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-text-primary mb-8 text-center">Resources</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {plugin.links.documentation && (
              <a href={plugin.links.documentation} class="card text-center hover:border-huitzo-accent transition-colors">
                <div class="text-3xl mb-4">📚</div>
                <h3 class="text-lg font-semibold text-text-primary mb-2">Documentation</h3>
                <p class="text-text-secondary text-sm">Complete guide and API reference</p>
              </a>
            )}

            {plugin.sourceCode && plugin.links.repository && (
              <a href={plugin.links.repository} target="_blank" rel="noopener" class="card text-center hover:border-huitzo-accent transition-colors">
                <div class="text-3xl mb-4">💻</div>
                <h3 class="text-lg font-semibold text-text-primary mb-2">Source Code</h3>
                <p class="text-text-secondary text-sm">Source code and development</p>
              </a>
            )}

            {plugin.links.support && (
              <a href={plugin.links.support} class="card text-center hover:border-huitzo-accent transition-colors">
                <div class="text-3xl mb-4">💬</div>
                <h3 class="text-lg font-semibold text-text-primary mb-2">Support</h3>
                <p class="text-text-secondary text-sm">Get help and report issues</p>
              </a>
            )}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Final CTA -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
                  <h2 class="text-3xl font-bold text-text-primary mb-6">
                    Ready to get <span class="text-gradient animated-gradient">started</span>?
                  </h2>        <p class="text-lg text-text-secondary mb-8">
          Install this plugin and start using it in minutes with our web-based CLI.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <CTAButton href="https://cli.huitzo.com" target="_blank" rel="noopener">
            Launch CLI (COMING SOON) →
          </CTAButton>
          <CTAButton href={`${import.meta.env.BASE_URL}plugins`} variant="secondary">
            View Other Plugins
          </CTAButton>
        </div>
      </div>
    </div>
  </section>
</Layout>