---
import Layout from '~/layouts/PageLayout.astro';
import RoadmapTimeline from '~/components/RoadmapTimeline.astro';

// Import roadmap data
const roadmapData = await import('~/data/roadmap.json');
const { milestones, lastUpdated, vision } = roadmapData.default;

const metadata = {
  title: 'Development Roadmap',
  description: 'Track our journey from concept to launch. See our milestones and upcoming features for the Huitzo Intelligence-as-a-Service platform.',
};
---

<Layout metadata={metadata}>
  <!-- Header Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl lg:text-5xl font-bold mb-6">
          Development <span class="text-gradient animated-gradient">Roadmap</span>
        </h1>
        <p class="text-lg text-muted mb-8 max-w-2xl mx-auto">
          Track our journey from concept to launch. Follow our progress as we build
          the future of intelligent data analysis with cutting-edge technology.
        </p>

        <!-- Last Updated -->
        <div class="inline-flex items-center gap-2 text-sm text-muted bg-[var(--aw-color-bg-secondary)] px-3 py-2 rounded-lg">
          <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Last updated: {new Date(lastUpdated).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </div>
      </div>
    </div>
  </section>

  <!-- Vision Section -->
  <section class="py-20 bg-[var(--aw-color-bg-secondary)]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">
          Our <span class="text-gradient animated-gradient">Vision</span>
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Vision -->
          <div class="card">
            <div class="text-4xl mb-3">üéØ</div>
            <h3 class="text-xl font-semibold mb-3">Vision</h3>
            <p class="text-muted text-sm leading-relaxed">{vision.statement}</p>
          </div>

          <!-- Mission -->
          <div class="card">
            <div class="text-4xl mb-3">üöÄ</div>
            <h3 class="text-xl font-semibold mb-3">Mission</h3>
            <p class="text-muted text-sm leading-relaxed">{vision.mission}</p>
          </div>

          <!-- Approach -->
          <div class="card">
            <div class="text-4xl mb-3">üîß</div>
            <h3 class="text-xl font-semibold mb-3">Approach</h3>
            <p class="text-muted text-sm leading-relaxed">{vision.approach}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why This Matters -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">
          Why This <span class="text-gradient animated-gradient">Matters</span>
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Problem -->
          <div>
            <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
              <span class="text-2xl">üí°</span>
              The Problem
            </h3>
            <ul class="space-y-3 text-muted">
              <li class="flex items-start gap-2">
                <span class="text-primary mt-1">‚Ä¢</span>
                <span>Sophisticated data analysis requires technical expertise that most people don't have</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-primary mt-1">‚Ä¢</span>
                <span>Existing tools are either too simple (spreadsheets) or too complex (programming)</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-primary mt-1">‚Ä¢</span>
                <span>AI assistants are general-purpose and don't maintain context or workflows</span>
              </li>
            </ul>
          </div>

          <!-- Solution -->
          <div>
            <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
              <span class="text-2xl">‚ú®</span>
              Our Solution
            </h3>
            <ul class="space-y-3 text-muted">
              <li class="flex items-start gap-2">
                <span class="text-primary mt-1">‚Ä¢</span>
                <span>CLI platform combines simplicity of commands with power of AI</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-primary mt-1">‚Ä¢</span>
                <span>Plugin marketplace enables specialized intelligence services for every use case</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-primary mt-1">‚Ä¢</span>
                <span>Community-driven ecosystem creates network effects and rapid innovation</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Key Differentiator -->
        <div class="mt-12 card bg-gradient-to-r from-primary/10 to-accent/10 border-2 border-primary/30">
          <h3 class="text-xl font-semibold mb-3 flex items-center gap-2">
            <span class="text-2xl">üéÅ</span>
            Key Differentiator
          </h3>
          <p class="text-muted mb-4">
            <strong class="text-primary">Plugin Marketplace:</strong> We're not just building a tool, we're creating a platform where developers can build and share specialized intelligence services. This creates a flywheel: more plugins attract more users, more users attract more developers, more developers create better plugins.
          </p>
          <p class="text-muted text-sm">
            Think of it as the "App Store for Intelligence Services" but built on simple, composable command-line tools that anyone can use. And this command-line tools are the fundation, once they are mature tested and adopted by the users we can simply create Grafical Applications that will be powered by Huitzo CLI. Huitzo was architected with scalability in mind.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Development Milestones -->
  <section class="py-20 bg-[var(--aw-color-bg-secondary)]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-12 text-center">Development Milestones</h2>

        <!-- Milestone Status -->
        <div class="mb-12">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Completed -->
            <div class="text-center">
              <div class="text-2xl font-bold text-[var(--aw-color-success)] mb-2">
                {milestones.filter(m => m.status === 'completed').length}
              </div>
              <div class="text-sm text-muted">‚úì COMPLETED</div>
            </div>

            <!-- In Progress -->
            <div class="text-center">
              <div class="text-2xl font-bold text-primary mb-2">
                {milestones.filter(m => m.status === 'in-progress').length}
              </div>
              <div class="text-sm text-muted">‚è≥ IN PROGRESS</div>
            </div>

            <!-- Upcoming -->
            <div class="text-center">
              <div class="text-2xl font-bold text-muted mb-2">
                {milestones.filter(m => m.status === 'upcoming').length}
              </div>
              <div class="text-sm text-muted">‚óã UPCOMING</div>
            </div>
          </div>
        </div>

        <!-- Timeline Component -->
        <RoadmapTimeline milestones={milestones as Array<{
          id: string;
          status: 'completed' | 'in-progress' | 'upcoming';
          title: string;
          date?: string;
          targetDate?: string;
          progress?: number;
          description: string;
          deliverables?: string[];
        }>} />
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-20 bg-[var(--aw-color-bg-secondary)]">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">
          Follow our <span class="text-gradient animated-gradient">development</span>
        </h2>
        <p class="text-lg text-muted mb-8">
          Stay updated on our progress as we build the future of intelligent data analysis.
          Join our community and be part of the journey.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/beta" class="btn-primary">
            Join Beta Program (COMING SOON)‚Üí
          </a>
        </div>

        <!-- Newsletter Signup -->
        <div class="mt-8 p-4 bg-[var(--aw-color-bg-page)] rounded-lg border border-gray-700">
          <p class="text-sm text-muted mb-2">üì¨ Get development updates in your inbox</p>
          <a href="/newsletter" class="text-primary hover:underline text-sm">
            Subscribe to our newsletter (COMING SOON)
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
