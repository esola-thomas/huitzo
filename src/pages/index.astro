---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import FeatureCard from '../components/FeatureCard.astro';
import PluginCard from '../components/PluginCard.astro';
import CTAButton from '../components/CTAButton.astro';

// Import plugin data
import financialPlugin from '../data/plugins/financial.json';

const roadmapData = await import('../data/roadmap.json');
const currentMilestone = roadmapData.default.milestones.find(m => m.status === 'in-progress');
---

<Layout 
  title="Huitzo - Intelligence-as-a-Service Platform"
  description="Huitzo is an Intelligence-as-a-Service platform that democratizes intelligent data analysis through a plugin-based architecture. Build powerful tools with simple CLI commands."
>
  <!-- Hero Section -->
  <Hero />

  <!-- What is Huitzo Section -->
  <section class="py-20 bg-huitzo-secondary/30">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold text-text-primary mb-4">
            What is <span class="text-gradient animated-gradient">Huitzo</span>?
          </h2>
          <p class="text-lg text-text-secondary max-w-2xl mx-auto">
            A revolutionary platform that makes complex data analysis as simple as having a conversation
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <FeatureCard
            icon="üîå"
            title="Extensible by Design"
            description="Every intelligence service is a plugin. Start with financial analysis, expand to any data domain. Build your own or use community plugins."
          />

          <FeatureCard
            icon="üíª"
            title="Simple Commands, Powerful Results"
            description="No complex dashboards or steep learning curves. Configure sophisticated analysis with simple terminal commands that anyone can learn."
          />

          <FeatureCard
            icon="üöÄ"
            title="Automated Insights"
            description="Set it up once, receive personalized analysis automatically. Let the platform do the work while you focus on decisions."
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Project Status Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-text-primary mb-4">
            Project <span class="text-gradient animated-gradient">Status</span>
          </h2>
        </div>

        <div class="card text-center">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
            <div>
              <h3 class="text-xl font-semibold text-text-primary mb-2">Current Status</h3>
              <p class="text-huitzo-accent font-medium mb-4">Foundation Development</p>

              {currentMilestone && (
                <div>
                  <h4 class="text-lg font-medium text-text-primary mb-3">{currentMilestone.title}</h4>
                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm text-text-secondary">Progress</span>
                    <span class="text-sm font-mono text-huitzo-accent">{currentMilestone.progress}%</span>
                  </div>
                  <div class="progress-bar mb-4">
                    <div class="progress-fill" style={`width: ${currentMilestone.progress}%`}></div>
                  </div>
                  <p class="text-sm text-text-secondary">Target: {new Date(currentMilestone.targetDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
                </div>
              )}
            </div>

            <div>
              <h3 class="text-xl font-semibold text-text-primary mb-4">Key Milestones</h3>
              <div class="space-y-3 text-sm">
                <div class="flex items-center justify-between">
                  <span class="text-text-secondary">‚úì Project Kickoff</span>
                  <span class="text-status-success">Oct 2025</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-text-secondary">‚è≥ Core Platform MVP</span>
                  <span class="text-huitzo-accent">Dec 2025</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-text-secondary">‚óã Financial Plugin</span>
                  <span class="text-text-muted">Jan 2026</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-text-secondary">‚óã Public Launch</span>
                  <span class="text-text-muted">May 2026</span>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-8 pt-6 border-t border-huitzo-border">
            <CTAButton href="/roadmap" variant="secondary">
              View Full Roadmap ‚Üí
            </CTAButton>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Plugin Section -->
  <section class="py-20 bg-huitzo-secondary/30">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-bold text-text-primary mb-4">
            Featured <span class="text-gradient animated-gradient">Plugin</span>
          </h2>
          <p class="text-lg text-text-secondary">
            Get a preview of what's possible with our first Intelligence-as-a-Service offering
          </p>
        </div>

        <div class="max-w-2xl mx-auto">
          <PluginCard plugin={financialPlugin} showFullDescription={true} />
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl lg:text-4xl font-bold text-text-primary mb-6">
          Ready to get <span class="text-gradient animated-gradient">started</span>?
        </h2>
        <p class="text-lg text-text-secondary mb-8">
          Start building powerful data analysis tools with simple commands
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <CTAButton href="https://cli.huitzo.com" target="_blank" rel="noopener">
            Launch CLI (COMING SOON) ‚Üí
          </CTAButton>
          <CTAButton href="/plugins" variant="secondary">
            Browse Plugins
          </CTAButton>
        </div>

        <!-- Contact Info -->
        <div class="mt-12 pt-8 border-t border-huitzo-border">
          <p class="text-sm text-text-muted">
            Questions? Get in touch at
            <a href="mailto:info@solathomas.com" class="text-huitzo-accent hover:underline">info@solathomas.com</a>
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
