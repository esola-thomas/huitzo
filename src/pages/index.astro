      const playPauseIcon = document.getElementById('playPauseIcon');
      const playPauseText = document.getElementById('playPauseText');
      
      let currentSlide = 0;
      let isPlaying = true;
      let intervalId: number | null = null;

      function showSlide(index: number) {
        if (!slides) return;
        
        slides.forEach((slide, i) => {
          if (i === index) {
            slide.classList.add('active');
          } else {
            slide.classList.remove('active');
          }
        });

        dots.forEach((dot, i) => {
          if (i === index) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });

        currentSlide = index;
      }

      function nextSlide() {
        const next = (currentSlide + 1) % slides!.length;
        showSlide(next);
      }

      function startAutoplay() {
        if (intervalId) clearInterval(intervalId);
        intervalId = window.setInterval(nextSlide, 8000); // 8 seconds per slide
        isPlaying = true;
        if (playPauseIcon) playPauseIcon.textContent = '‚è∏Ô∏è';
        if (playPauseText) playPauseText.textContent = 'Pause';
      }

      function stopAutoplay() {
        if (intervalId) {
          clearInterval(intervalId);
          intervalId = null;
        }
        isPlaying = false;
        if (playPauseIcon) playPauseIcon.textContent = '‚ñ∂Ô∏è';
        if (playPauseText) playPauseText.textContent = 'Play';
      }

      // Initialize first slide
      if (slides && slides.length > 0) {
        showSlide(0);
        startAutoplay();
      }

      // Play/Pause button
      playPauseBtn?.addEventListener('click', () => {
        if (isPlaying) {
          stopAutoplay();
        } else {
          startAutoplay();
        }
      });

      // Dot navigation
