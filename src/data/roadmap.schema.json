{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Huitzo Roadmap Schema",
  "description": "Simple roadmap schema focused on what we're building and why",
  "type": "object",
  "required": ["lastUpdated", "vision", "milestones"],
  "additionalProperties": false,
  "properties": {
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp for last update"
    },
    "vision": {
      "type": "object",
      "required": ["statement", "mission", "approach"],
      "additionalProperties": false,
      "properties": {
        "statement": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500,
          "description": "High-level vision statement"
        },
        "mission": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500,
          "description": "Mission statement - how we achieve the vision"
        },
        "approach": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500,
          "description": "Our approach to building the platform"
        }
      }
    },
    "milestones": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "status",
          "title",
          "description",
          "progress",
          "deliverables"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
            "description": "Unique identifier (kebab-case)"
          },
          "status": {
            "type": "string",
            "enum": ["completed", "in-progress", "upcoming", "planning"],
            "description": "Current status of the milestone"
          },
          "title": {
            "type": "string",
            "minLength": 3,
            "maxLength": 100,
            "description": "Milestone title"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Completion date (for completed milestones)"
          },
          "targetDate": {
            "type": "string",
            "format": "date",
            "description": "Target date (for upcoming/in-progress milestones)"
          },
          "progress": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Progress percentage (0-100)"
          },
          "description": {
            "type": "string",
            "minLength": 20,
            "maxLength": 1000,
            "description": "Detailed description of what and why"
          },
          "deliverables": {
            "type": "array",
            "minItems": 1,
            "maxItems": 20,
            "items": {
              "type": "string",
              "minLength": 5,
              "maxLength": 200
            },
            "description": "List of key deliverables"
          }
        }
      }
    }
  }
}
