---
export interface Props {
  icon: string;
  title: string;
  description?: string;
  class?: string;
}

const { icon, title, description, class: className = '' } = Astro.props;
---

<div class={`card glassmorphism ${className}`}>
  <div class="icon-wrapper">
    <div class="text-3xl">{icon}</div>
  </div>
  <h3 class="text-xl font-semibold mb-3 text-text-primary">{title}</h3>
  {Astro.slots.default ? (
    <div class="text-text-secondary leading-relaxed"> 
      <slot />
    </div>
  ) : (
    <p class="text-text-secondary leading-relaxed">{description}</p>
  )}
</div>