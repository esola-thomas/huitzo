{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*.ts", "**/*.tsx", "**/*.astro"],
  "exclude": [
    "dist/",
    "src_backup/",
    "node_modules/",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "scripts/**/*",
    "tailwind.config.js",
    "tailwind.config.cjs",
    "eslint.config.js"
  ]
}
